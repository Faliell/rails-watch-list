<%= render "components/navbar" %>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<h1><%=@list.name  %></h1>

<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
  <%= render "components/card", bookmark: bookmark %>
    <li> <%= bookmark.movie.title  %>
    <%= link_to bookmark_path(bookmark.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash-can"></i>
    <% end %>
    </li>
  <% end %>
</ul>

<%= link_to "back", root_path %>
